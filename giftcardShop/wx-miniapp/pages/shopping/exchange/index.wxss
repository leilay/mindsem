/*zan-selectcard__list  */

.zan-selectcard__list {
  display: flex;
  overflow-x: auto;
  padding: 16rpx 24rpx;
}

.zan-selectcard__list label {
  /* width: 30%; */
  text-align: center;
  display: block;
}

.zan-selectcard__list label radio {
  display: none;
}

.zan-selectcard__list .item {
  margin: 12rpx;
  border-radius: 4rpx;
  overflow: hidden;
  position: relative;
}

.zan-selectcard__list .item.active::after {
  content: " ";
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  border: 4rpx solid #d00;
  border-radius: 12rpx;
  z-index: 9;
  box-sizing: border-box;
}

.zan-selectcard__list .item .item-after {
  position: absolute;
  right: 0;
  bottom: 0;
  display: none;
  z-index: 1;
}

.zan-selectcard__list .item .item-after icon {
  background-color: #fff;
  border-radius: 50%;
  width: 18px;
  height: 18px;
}

.zan-selectcard__list .item.active .item-after {
  display: block;
}

.zan-selectcard__list .item image {
  width: 25vw;
  height: 14vw;
  opacity: 0.54;
  border-radius: 12rpx;
}

.zan-selectcard__list .item.active image {
  opacity: 1;
}